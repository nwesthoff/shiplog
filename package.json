{
  "name": "shiplog",
  "author": {
    "name": "Nils Westhoff",
    "email": "nils@nilswesthoff.com",
    "url": "https://nilswesthoff.com"
  },
  "description": "A cross-platform Menu Bar application for watching your Vercel and Netlify builds.",
  "version": "1.0.1",
  "private": true,
  "main": "build/electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently -k \"BROWSER=none yarn start\" \"yarn electron\"",
    "assets": "copyfiles electron/assets/* build",
    "electron:dev": "concurrently \"BROWSER=none yarn start\" \"yarn assets\" \"wait-on tcp:3000 && tsc -p electron -w\" \"tsc -p electron && yarn electron\"",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package": "react-scripts build && electron-forge package",
    "make": "cross-env NODE_ENV=production rimraf build && yarn build && yarn assets && tsc -p electron && electron-forge make"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-traywindow-positioner": "^1.1.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.1.1",
    "@electron-forge/maker-deb": "6.1.1",
    "@electron-forge/maker-rpm": "6.1.1",
    "@electron-forge/maker-squirrel": "6.1.1",
    "@electron-forge/maker-zip": "6.1.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.4",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "concurrently": "^6.2.1",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.24.0",
    "downshift": "^6.1.7",
    "electron": "^24.2.0",
    "react": "^17.0.2",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.11.1",
    "react-scripts": "5.0.1",
    "rimraf": "^3.0.2",
    "sass": "^1.41.1",
    "swr": "^1.0.1",
    "typescript": "^5.0.4",
    "wait-on": "^6.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "name": "Shiplog",
        "icon": "icons/icon.icns",
        "osxSign": {
          "identity": "Apple Development: nils@nilswesthoff.com (4TUL43JS5F)"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "shiplog"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
